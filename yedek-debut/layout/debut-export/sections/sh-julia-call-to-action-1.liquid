{{"sectionhub-julia.scss.css" | asset_url | stylesheet_tag }}

<div id="sh-julia-{{ section.id }}" class="sh sh-julia-call-to-action-1" data-variant="{{section.settings.variant}}">  
  <div class="sh-overlay" style="background-image: url({{section.settings.image | img_url : 'original' }})"></div>
  <div class="sh-data sh-container">
    <div class="sh-header">
      <h2 class="sh-title">
        {{section.settings.title}}
      </h2>
    </div>
    {% unless section.settings.content == blank %}
      <div class="sh-content">
        {{section.settings.content}}
      </div>
    {% endunless %}
      <div class="sh-footer">
        {% unless section.settings.link == blank %}
        	<a class="sh-button" href="{{section.settings.link}}">{{section.settings.button_text}}</a>
        {% endunless %}
      </div>    
  </div>  
</div>

{% schema %}
  {
    "name": "Call to action 1",
    "settings": [	  	       
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Call to action"
      },
	  {
        "type": "text",
        "id": "subtitle",
        "label": "Subheading"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text",
        "default": "Get more info"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button link"
      },
	  {
        "type": "select",
        "id": "variant",
        "label": "Variant",
        "default": "style_1",
        "options": [
          {
            "label": "Style 1",
            "value": "style_1"
          }
        ]
      }
    ],	
    "presets": [{
      "name": "Call to action 1",
      "category": "SectionHub: Julia"
    }]
  }
{% endschema %}